<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.kinecosystem.tippic">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name="org.kinecosystem.tippic.TippicApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher_app"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_app"
        android:supportsRtl="false"
        android:theme="@style/AppTheme">
        <activity
            android:name="org.kinecosystem.tippic.view.MainActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />
        <activity
            android:name="org.kinecosystem.tippic.view.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="org.kinecosystem.tippic.view.earn.QuestionnaireActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Questionnaire" />

        <activity
            android:name="org.kinecosystem.tippic.view.earn.CategoryTaskActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Questionnaire" />

        <activity
            android:name="org.kinecosystem.tippic.view.RegisterErrorActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Questionnaire" />

        <activity
            android:name="org.kinecosystem.tippic.view.earn.WebTaskCompleteActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Questionnaire" />


        <activity
            android:name="org.kinecosystem.tippic.view.tutorial.TutorialActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="org.kinecosystem.tippic.view.restore.RestoreWalletActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name="org.kinecosystem.tippic.view.backup.BackupWalletActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />

        <activity
            android:name="org.kinecosystem.tippic.view.createWallet.CreateWalletActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="org.kinecosystem.tippic.view.phoneVerify.PhoneVerifyActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name="org.kinecosystem.tippic.view.spend.PurchaseOfferActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="org.kinecosystem.tippic.view.spend.AppDetailsActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="org.kinecosystem.tippic.view.spend.Peer2PeerActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="org.kinecosystem.tippic.view.earn.WebTaskActivity"
            android:screenOrientation="landscape" />

        <activity
            android:name="org.kinecosystem.tippic.view.faq.FAQActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="org.kinecosystem.tippic.view.comingSoon.EcoAppsComingSoonActivity"
            android:screenOrientation="portrait" />

        <service android:name="org.kinecosystem.tippic.firebase.KinInstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name="org.kinecosystem.tippic.firebase.KinMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>