<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/multiple_answer_button_wrapper"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginTop="1dp"
    android:gravity="center_vertical"
    android:background="@drawable/multiple_button_answer_bg_drawable"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/multiple_answer_button_icon"
        android:layout_width="15dp"
        android:layout_height="13dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_weight="0"
        android:src="@drawable/ic_plus"
        tools:srcCompat="@drawable/ic_plus"
        />

    <TextView
        android:id="@+id/multiple_answer_button_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_weight="1"
        tools:textColor="#7884a5"
        tools:text="Krispy Kreme"
        />

</LinearLayout>
