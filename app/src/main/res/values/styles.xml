<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Button.Blue">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@drawable/button_blue_font_color</item>
        <item name="android:background">@drawable/button_blue_bg</item>
    </style>

    <style name="Button.Blue.Wide">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
    </style>

    <style name="Button.OFFER_CODE">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#5c6786</item>
        <item name="android:gravity">start|left|center_vertical</item>
        <item name="android:paddingLeft">25dp</item>
        <item name="android:background">@drawable/button_blue_hollow_bg</item>
    </style>

    <style name="Button.Hollow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">#5c6786</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_blue_hollow_line</item>
    </style>


    <style name="Button.Answer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/answer_font_color</item>
        <item name="android:background">@drawable/answer_bg_drawable</item>
    </style>

    <style name="Button.MultipleAnswer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/multiple_button_answer_bg_drawable</item>
    </style>

    <style name="Button.ImageAnswer">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">124dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/image_answer_bg_drawable</item>
    </style>

    <style name="Questionnaire" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/status_bar_color</item>
        <item name="colorPrimaryDark">@color/status_bar_color</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomAlertDialog" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/status_bar_color</item>
    </style>

    <style name="AppTheme.DarkAccent">
        <item name="colorAccent">@color/grey</item>
    </style>

</resources>
